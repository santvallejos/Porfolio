---
import GitHub from "./icons/GithubIcon.astro";
import HTML from "./icons/HTMLIcon.astro";
import CSS from "./icons/CSSIcon.astro";
import Tailwind from "./icons/TailwindIcon.astro";
import SASS from "./icons/SASSIcon.astro";
import AstroIcon from "./icons/AstroIcon.astro";
import JavaScript from "./icons/JavaScriptIcon.astro";
import MySQL from "./icons/MySQLIcon.astro";
import Postman from "./icons/Postman.astro";
import PHP from "./icons/PHPIcon.astro";
import CodeIgniter from "./icons/CodeIgniter.astro";
import Laravel from "./icons/LaravelIcon.astro";
import React from "./icons/ReactJSIcon.astro";
import NodeJS from "./icons/NodeJSIcon.astro";
import VueJS from "./icons/VueJSIcon.astro";
import Angular from "./icons/AngularIcon.astro";
import Browser from "./icons/BrowserIcon.astro";

import LinkButton from "./LinkButton.astro";


const TAGS = {

  HTML: {
    name: "HTML",
    class: "bg-gray-700 text-white",
    icon: HTML,
  },
  CSS: {
    name: "CSS",
    class: "bg-blue-400 text-black",
    icon: CSS,
  },
  AstroIcon:{
    name: "Astro",
    class: "bg-[#534deb] text-white",
    icon: AstroIcon
  },
  TAILWIND: {
    name: "Tailwind",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  SASS: {
    name: "SASS",
    class: "bg-pink-700 text-white",
    icon: SASS
  },
  JAVASCRIP: {
    name: "JavaScript",
    class: "bg-amber-500 text-black",
    icon: JavaScript
  },
  MYSQL: {
    name: "MySQL",
    class: "bg-white text-black border border-black",
    icon: MySQL
  },
  POSTMAN: {
    name: "Postman",
    class: "bg-orange-400 text-white",
    icon: Postman
  },
  PHP:{
    name: "PHP",
    class: "bg-indigo-950 text-white",
    icon: PHP
  },
  CODEIGNITER: {
    name: "CodeIgniter",
    class: "bg-rose-900 text-white",
    icon: CodeIgniter
  },
  LARAVEL: {
    name: "Laravel",
    class:  "bg-black text-white",
    icon: Laravel
  },
  NODEJS: {
    name: "NodeJS",
    class: "bg-white text-black",
    icon: NodeJS
  },
  REACTJS: {
    name: "ReactJS",
    class: "bg-[#16181d] text-white",
    icon: React
  },
  VUEJS: {
    name: "VueJS",
    class: "bg-[#abcebe] text-black",
    icon: VueJS
  },
  ANGULAR: {
    name: "Angular",
    class: "bg-[#e6d4f7] text-black",
    icon: Angular
  }
}
const PROJECTS = [
  {
    title: "QuickMart",
    description: "E-commerse de un supermercado que permite crear un usuario, registrarse, obtener una lista de productos para agregar al carrito y en el mismo administrar la cantidad, eliminar o realizar la compra.",
    github: "https://github.com/santvallejos/SupermercadoLaravel",
    image: "./projects/QuickMart.jpg",
    tags: [TAGS.LARAVEL, TAGS.VUEJS, TAGS.CSS, TAGS.MYSQL],
  },
  {
    title: "VirtualTome",
    description:
      "Este proyecto es una biblioteca virtual donde puedes administrar una lista de libros, estos poseen: nombre, autor, categoría, url de imagen, fecha de publicación y su isbn. Cumple las funciones básicas de un CRUD que son:Listar, añadir, actualizar y eliminar un libro.",
    githubBackend: "https://github.com/santvallejos/VirtualTome-Backend",
    githubFrontend: "https://github.com/santvallejos/VirtualTome-Frontend",
    image: './projects/VirtualTomeShots.png',
    tags: [TAGS.NODEJS, TAGS.REACTJS, TAGS.MYSQL, TAGS.POSTMAN],
  },
  {
    title: "To-Dolist",
    description: "Un gestor de tareas, donde se puede agregar, marcar cuando están finalizadas y eliminarlas.",
    github: "https://github.com/santvallejos/To-doList",
    image: "./projects/To-DolistShots.png",
    tags: [TAGS.ANGULAR],
  },
  {
    title: "Calculadora Web",
    description:
      "Calculadora básica con el fin de practicar JS. Creado desde cero con:",
    link: "https://santvallejos.github.io/CalculadoraJS/",
    github: "https://github.com/santvallejos/CalculadoraJS",
    image: "./projects/calculadora.webp",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIP],
  },
  {
    title: "Sitio web con Login y Register",
    description:
      "Página web Desarrollada en el programa Talentos Digitales con el objetivo de construir un sistema de login y register además del aspecto visual que posee con Bootstrap. Creado desde cero con:",
    github: "https://github.com/santvallejos/LoginRegisterTalentosDigitales",
    image: "./projects/proyectoTalentosDigitales.webp",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIP, TAGS.CODEIGNITER ,TAGS.PHP, TAGS.MYSQL],
  }
]
---

<section class="container mx-auto flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github, githubBackend, githubFrontend}) => (
      <article class="max-w-screen-md mx-auto">
        <h3 class="text-2xl font-semibold mb-2 text-blue-500/100">
          {title}
        </h3>
        <p class="text-lg mb-4 text-pretty">{description}</p>
        <ul class="flex flex-wrap gap-x-2 flex-row mb-2">
          {tags.map((tag) => (
            <li class="pb-2">
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        <img
          loading="lazy"
          class="rounded shadow-2xl shadow-white/10 w-full"
          src={image}
          alt={`Captura de pantalla del proyecto ${image}`}
        />
        <footer class="flex gap-x-4 items-end justify-start mt-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Ver código fuente
            </LinkButton>
          )}
          {githubBackend &&(
              <LinkButton href={githubBackend}>
              <GitHub class="size-6" />
              Ver código Backend
            </LinkButton>
          )}
          {githubFrontend &&(
              <LinkButton href={githubFrontend}>
              <GitHub class="size-6" />
              Ver código Frontend
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Browser class="size-6"/>
            Ir al sitio web
          </LinkButton>
          )}
        </footer> 
      </article>
    ))
  }
</section>