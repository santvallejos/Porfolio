---
import GitHub from "./icons/GithubIcon.astro";
import HTML from "./icons/HTMLIcon.astro";
import CSS from "./icons/CSSIcon.astro";
import Tailwind from "./icons/TailwindIcon.astro";
import SASS from "./icons/SASSIcon.astro";
import AstroIcon from "./icons/AstroIcon.astro";
import JavaScript from "./icons/JavaScriptIcon.astro";
import MySQL from "./icons/MySQLIcon.astro";
import Postman from "./icons/Postman.astro";
import PHP from "./icons/PHPIcon.astro";
import CodeIgniter from "./icons/CodeIgniter.astro";
import Laravel from "./icons/LaravelIcon.astro";

import LinkButton from "./LinkButton.astro";


const TAGS = {

  HTML: {
    name: "HTML",
    class: "bg-gray-700 text-white",
    icon: HTML,
  },
  CSS: {
    name: "CSS",
    class: "bg-blue-400 text-black",
    icon: CSS,
  },
  AstroIcon:{
    name: "Astro",
    class: "bg-[#534deb] text-white",
    icon: AstroIcon
  },
  TAILWIND: {
    name: "Tailwind",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  SASS: {
    name: "SASS",
    class: "bg-pink-700 text-white",
    icon: SASS
  },
  JAVASCRIP: {
    name: "JavaScript",
    class: "bg-amber-500 text-black",
    icon: JavaScript
  },
  MYSQL: {
    name: "MySQL",
    class: "bg-white text-black border border-black",
    icon: MySQL
  },
  POSTMAN: {
    name: "Postman",
    class: "bg-orange-400 text-white",
    icon: Postman
  },
  PHP:{
    name: "PHP",
    class: "bg-indigo-950 text-white",
    icon: PHP
  },
  CODEIGNITER: {
    name: "CodeIgniter",
    class: "bg-rose-900 text-white",
    icon: CodeIgniter
  },
  LARAVEL: {
    name: "Laravel",
    class:  "bg-black text-white",
    icon: Laravel
  },
}
const PROJECTS = [
  {
    title: "QuickMart... (Proximante)",
    description: "Ecommerse de un supermercado desarrollándose con laravel, un proyecto final de talentos digitales trabajado con un grupo. El sitio web contiene un login y register, sistema de compras con agregados al carrito y gestión de correo electrónico.",
    github: "https://github.com/santvallejos/SupermercadoLaravel",
    image: "./projects/QuickMart.jpg",
    tags: [TAGS.LARAVEL, TAGS.CSS, TAGS.MYSQL],
  },
  {
    title: "Premios Esland 2024",
    description:
      "Sitio Web de réplica y mejora sobre la página de los premios esland con fines de aprender y mejorar en la programación. Creado desde cero con:",
    link: "https://eslandweb.netlify.app/",
    github: "https://github.com/santvallejos/Esland",
    image: "./projects/eslandWeb.webp",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIP ,TAGS.AstroIcon ,TAGS.TAILWIND],
  },
  {
    title: "Rest-Api Librería",
    description:
      "Una api creada en el programa de Talentos Digitales, este proyecto tiene el fin de simular una librería donde se pueden agregar libros por su Nombre, Autor, categoría, año de publicación y su ISBN. Se puede mostrar, agregar, consultar, eliminar y actualizar libros. Fue creado desde cero con:",
    github: "https://github.com/santvallejos/rest-api",
    image: './projects/rest-api Libreria.webp',
    tags: [TAGS.JAVASCRIP, TAGS.MYSQL, TAGS.POSTMAN],
  },
  {
    title: "Calculadora Web",
    description:
      "Calculadora básica con el fin de practicar JS. Creado desde cero con:",
    link: "https://santvallejos.github.io/CalculadoraJS/",
    github: "https://github.com/santvallejos/CalculadoraJS",
    image: "./projects/calculadora.webp",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIP],
  },
  {
    title: "Sitio web con Login y Register",
    description:
      "Página web Desarrollada en el programa Talentos Digitales con el objetivo de construir un sistema de login y register además del aspecto visual que posee con Bootstrap. Creado desde cero con:",
    github: "https://github.com/santvallejos/LoginRegisterTalentosDigitales",
    image: "./projects/proyectoTalentosDigitales.webp",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIP, TAGS.CODEIGNITER ,TAGS.PHP, TAGS.MYSQL],
  },
  {
    title: "Página de contacto",
    description:
      "Formulario desarrollado para lograr un aspecto visual atractivo.  Creado desde cero con:",
    link: "https://santvallejos.github.io/paginaDeContacto/",
    github: "https://github.com/santvallejos/paginaDeContacto",
    image: "./projects/paginaContacto.webp",
    tags: [TAGS.HTML, TAGS.CSS],
  },
  {
    title: "Página de testimonios",
    description:
      "Criticas y calificación de usuario hacia una página, este proyecto tiene el fin de implementar y practicar aspectos visuales con SASS.  Creado desde cero con:",
    link: "https://santvallejos.github.io/paginaDeTestimonios/",
    github: "https://github.com/santvallejos/paginaDeTestimonios",
    image: "./projects/paginaTestimonios.webp",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.SASS],
  }
]
---

<section class="container mx-auto flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="max-w-screen-md mx-auto">
        <h3 class="text-2xl font-semibold mb-2 text-blue-500/100">
          {title}
        </h3>
        <p class="text-lg mb-4 text-pretty">{description}</p>
        <ul class="flex flex-wrap gap-x-2 flex-row mb-2">
          {tags.map((tag) => (
            <li class="pb-2">
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        <img
          loading="lazy"
          class="rounded shadow-2xl shadow-white/10 w-full"
          src={image}
          alt={`Captura de pantalla del proyecto ${image}`}
        />
        <footer class="flex gap-x-4 items-end justify-start mt-4">
  {github && (
    <LinkButton href={github}>
      <GitHub class="size-6" />
      Ver código fuente
    </LinkButton>
  )}
  {link && (
    <LinkButton href={link}>
      <svg
        width="24"
        height="24"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
              <>
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M19.5 7a9 9 0 0 0 -7.5 -4a8.991 8.991 0 0 0 -7.484 4" />
                <path d="M11.5 3a16.989 16.989 0 0 0 -1.826 4" />
                <path d="M12.5 3a16.989 16.989 0 0 1 1.828 4" />
                <path d="M19.5 17a9 9 0 0 1 -7.5 4a8.991 8.991 0 0 1 -7.484 -4" />
                <path d="M11.5 21a16.989 16.989 0 0 1 -1.826 -4" />
                <path d="M12.5 21a16.989 16.989 0 0 0 1.828 -4" />
                <path d="M2 10l1 4l1.5 -4l1.5 4l1 -4" />
                <path d="M17 10l1 4l1.5 -4l1.5 4l1 -4" />
                <path d="M9.5 10l1 4l1.5 -4l1.5 4l1 -4" />
              </>
            </svg>
            Ir al sitio web
          </LinkButton>
          )}
        </footer> 
      </article>
    ))
  }
</section>